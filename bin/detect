#!/bin/sh

#manifest=$1/app/src/main/AndroidManifest.xml

# this pack is valid for apps with a hello.txt in the root
if [ -f $1/gradlew ]; then
  echo "Android Manifest Found!"
  exit 0
else
  echo "Could not find an 'AndroidManifest' file... Please check that it exists and is commited to Git. The usual location for this file is /app/src/main/AndroidManifest.xml"
  exit 1
fi
