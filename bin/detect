#!/bin/sh


if [ -f $1/build.gradle ]; then
  echo "-----> build.gradle detected"
  grep -q "com.android.application" build.gradle; [ $? -eq 0 ] && echo "yes" || echo "-----> Could not find 'com.android.application' in your build.gradle! Please ensure your project is properly configured. This plugin is generally aplied to the root build.gradle"
#  echo "-----> com.android.application plugin detected in build.gradle"
  exit 0
else
  echo "-----> Could not find your root build.gradle file."
  exit 1
fi
