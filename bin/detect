#!/bin/sh
FILE=$1/build.gradle

grep -q "com.android.application" build.gradle; [ $? -eq 0 ] && echo "===> com.android.application plugin detected in build.gradle"   || echo "$FAIL"
grep -q "com.android.application" build.fail; [ $? -eq 0 ] && echo "===> com.android.application plugin detected in build.gradle"   || echo "$FAIL"

ls $1

if [ -s $1/build.gradle ]; then
  echo "Android"
  exit 0
else
  echo "Not Android"
  exit 1
fi
