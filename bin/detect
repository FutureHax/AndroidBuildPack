#!/bin/sh

if [ ! -z $(grep "com.android.application" "build.gradle") ]; then
  echo "-----> com.android.application plugin detected in build.gradle"
  exit 0
else
  echo "-----> Could not find 'com.android.application' in your build.gradle! Please ensure your project is properly configured. This plugin is generally aplied to the root build.gradle"
  exit 1
fi
