#!/usr/bin/env bash
set -eo pipefail

FAIL="===> Could not find 'com.android.application' in your build.gradle! Please ensure your project is properly configured. This plugin is generally aplied to the root build.gradle"

if [[ ! -f build.gradle ]]; then
  echo "===> Could not find your root build.gradle file."
  exit 1
else 
  echo "===> build.gradle detected"
  grep -q "com.android.application" build.gradle; [ $? -eq 0 ] && echo "===> com.android.application plugin detected in build.gradle" || echo "$FAIL"
fi
