#!/bin/sh

if [ ! -z $(grep com.android.application  build.gradle) ]; then echo "FOUND"; fi

if [ -f "${manifest}" ]; then
  echo "-----> Android Manifest Found!"
  exit 0
else
  echo "-----> Could not find an 'AndroidManifest.xml' file! Please ensure your project is properly configured. The expected location for this file is 'app/src/main/AndroidManifest.xml'"
  exit 1
fi
